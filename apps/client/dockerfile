# --- STAGE 1: BASE ---
FROM node:22-alpine AS base
WORKDIR /app
COPY package.json package-lock.json* ./

# --- STAGE 2: DEVELOPMENT (Dev) ---
FROM base AS dev
RUN npm install
COPY . .
EXPOSE 5173
CMD ["npm", "run", "dev", "--", "--host"]

# --- STAGE 2.1: TESTING (Dev Alias) ---
# Dev = Test
FROM dev AS test

# --- STAGE 3: BUILDER (Prod Prep) ---
FROM base AS builder
RUN npm install
COPY . .
RUN npm run build

# --- STAGE 4: PRODUCTION (Prod) ---
FROM base AS prod
WORKDIR /app
RUN npm install -g serve
COPY --from=builder /app/dist ./dist
EXPOSE 80
CMD ["serve", "-s", "dist", "-l", "80"]

# --- STAGE 4.1: STAGING (Prod Alias) ---
# Stage = Prod
FROM prod AS stage