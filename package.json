{
  "name": "riffle",
  "version": "1.0.0",
  "description": "Music trivia game",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=dev nodemon server.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "npm run test -- --watch",
    "stage": "NODE_ENV=stage node server.js",
    "prod": "NODE_ENV=prod node server.js",
    "docker:build": "docker-compose -f docker-compose.app.yml build",
    "docker:up": "docker-compose -f docker-compose.app.yml -f docker-compose.db.yml up -d",
    "docker:down": "docker-compose -f docker-compose.app.yml -f docker-compose.db.yml down",
    "docker:logs": "docker-compose -f docker-compose.app.yml -f docker-compose.db.yml logs -f",
    "docker:db:up": "docker-compose -f docker-compose.db.yml up -d",
    "docker:db:down": "docker-compose -f docker-compose.db.yml down"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  }
}