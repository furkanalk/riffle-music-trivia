# ==========================================
# 1. APPLICATION CONFIGURATION
# ==========================================
# Options: dev, test, stage, prod
NODE_ENV=dev
PORT=1968

# ==========================================
# 2. DATABASE CONFIGURATION (Postgres)
# ==========================================
POSTGRES_USER=riffle_user
POSTGRES_PASSWORD=riffle_pass
POSTGRES_DB=riffle_dev
POSTGRES_PORT=5432

# ==========================================
# 3. API KEYS
# ==========================================
# Usage: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
RIFFLE_DEV_API_KEY=<YOUR_DEV_API_KEY_HERE>
RIFFLE_TEST_API_KEY=<YOUR_TEST_API_KEY_HERE>
RIFFLE_STAGE_API_KEY=<YOUR_STAGE_API_KEY_HERE>
RIFFLE_PROD_API_KEY=<YOUR_PROD_API_KEY_HERE>

# ==========================================
# 4. ENVIRONMENT URLs (CORS & References)
# ==========================================
STAGE_ORIGIN=https://stage.riffle.com
PROD_ORIGIN=https://riffle.com